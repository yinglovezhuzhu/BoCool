<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@drawable/btn_dialog_negative" android:state_window_focused="false"/>
    <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
    <item android:drawable="@drawable/btn_dialog_negative2" android:state_pressed="true"/>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:drawable="@drawable/btn_dialog_negative2" android:state_focused="false" android:state_pressed="true"/>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/btn_dialog_negative2" android:state_selected="true"/>
    <!-- 获得焦点时的图片背景 -->
    <item android:drawable="@drawable/btn_dialog_negative2" android:state_focused="true"/>

</selector>